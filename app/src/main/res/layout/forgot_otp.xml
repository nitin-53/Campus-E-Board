<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chicago"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/linerlayout_bg"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/unique_code"
            android:textColor="#fff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/unique_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_unique_code"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/new_passwd"
            android:textColor="#fff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/new_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/passwd"
            android:drawablePadding="8dp"
            android:hint="@string/enter_newpasswd"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/confirm_passwd"
            android:textColor="#fff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirm_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/passwd"
            android:drawablePadding="8dp"
            android:hint="@string/confirm_passwd"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textCursorDrawable="@null" />


        <Button
            android:id="@+id/btn_new_passwd"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_default_bg"
            android:onClick="forgotOtpValidatons"
            android:padding="10dp"
            android:text="@string/submit" />
    </LinearLayout>

</RelativeLayout>


