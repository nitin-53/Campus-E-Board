<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/unique_code"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/unique_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:hint="@string/enter_unique_code"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/new_passwd"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/new_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:drawableLeft="@drawable/passwd"
            android:drawablePadding="8dp"
            android:hint="@string/enter_newpasswd"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/btn_new_passwd"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_default_bg"
            android:padding="10dp"
            android:text="@string/submit" />
    </LinearLayout>

</RelativeLayout>


